<div class="container-fluid">
  <h1 class="mt-4 mb-4">Dashboard</h1>
  <div class="row">
      <div class="col-xl-3 col-md-6">
          <div class="card bg-primary text-white mb-4">
              <div class="card-body">
                <h6>Todos os Alunos</h6>
                <h4><b><%=@total_alunos%></b></h4>
              </div>
          </div>
      </div>
      <div class="col-xl-3 col-md-6">
          <div class="card bg-warning text-white mb-4">
              <div class="card-body">
                <h6>Alunos Ativos</h6>
                <h4><b><%=@alunos_ativos%></b></h4>
              </div>
          </div>
      </div>
      <div class="col-xl-3 col-md-6">
          <div class="card bg-success text-white mb-4">
              <div class="card-body">
                <h6>Alunos Inadiplentes</h6>
                <h4><b><%=@total_alunos%></b></h4>
              </div>
          </div>
      </div>
      <div class="col-xl-3 col-md-6">
          <div class="card bg-danger text-white mb-4">
              <div class="card-body">
                <h6>Alunos Cancelados</h6>
                <h4><b><%=@alunos_cancelados%></b></h4>
              </div>
          </div>
      </div>
  </div>

  <div class="card mb-4">
      <div class="card-header">
          <i class="fas fa-table mr-1"></i>
         Alunos
      </div>
      <div class="card-body">
          <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Plano</th>
                        <th>Email</th>
                        <th>Telefone</th>
                        <th>Status</th>
                        <th>D.  Confirmação</th>
                    </tr>
                </thead>
                
                <tbody>
                    <% @alunos.each do |aluno| %>
                        <tr>
                            <td style="text-transform: capitalize;"><%= aluno.name %></td>
                            <td><%= aluno.name_subscription_plan %></td>
                            <td><%= aluno.email %></td>
                            <td>
                            <% if aluno.phone_checkout_local_code.present? %>
                                (<%= aluno.phone_checkout_local_code %>) <%= aluno.phone_checkout_number %>
                            <% end %>
                            </td>
                            <td><%= status_pagamento_aluno(aluno.status) %></td>
                            <td><%= aluno.confirmation_purchase_date.strftime("%d/%m/%Y") rescue ""%></td>
                        </tr>
                    <% end %>
                </tbody>
              </table>
          </div>
      </div>
  </div>
</div>