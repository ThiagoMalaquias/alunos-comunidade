<div class="container-fluid">

  <%= link_to new_aluno_path, class: 'btn btn-primary float-right' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Novo Aluno
  <% end %>
  
  <h1 class="mt-4 mb-4">Alunos</h1>

  <div class="card mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Plano</th>
              <th>Email</th>
              <th>Telefone</th>
              <th>Status</th>
              <th>Data</th>
              <th>Vencimento</th>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          
          <tbody>
            <% @alunos.each do |aluno| %>
              <tr>
                <td style="text-transform: capitalize;"><%= aluno.name %></td>
                <td><%= aluno.name_subscription_plan %></td>
                <td><%= aluno.email %></td>
                <td>
                <% if aluno.phone_checkout_local_code.present? %>
                    (<%= aluno.phone_checkout_local_code %>) <%= aluno.phone_checkout_number %>
                <% end %>
                </td>
                <td><%= status_pagamento_aluno(aluno.status) %></td>
                <td><%= aluno.confirmation_purchase_date.strftime("%d/%m/%Y") rescue ""%></td>
                <td><%= aluno.vencimento %></td>
                <td><%= link_to 'Mostrar', aluno %></td>
                <td><%= link_to 'Editar', edit_aluno_path(aluno) %></td>
                <td><%= link_to 'Apagar', aluno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

