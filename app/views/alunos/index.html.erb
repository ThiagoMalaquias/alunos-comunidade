<section id="one" style="padding: 3em 0 4em 0;">
  <header style="max-width: 65em;margin: 0 auto;">
    <div class="row">
      <div class="6u 12u$(xsmall)">
        <h2>Alunos</h2>
      </div>
      <div class="6u 12u$(xsmall)">
        <div class="form-group">
          <input type="email" class="form-control" name="" id="" placeholder="Busca">
        </div>
      </div>
    </div>
  </header>
  <div class="inner" style="overflow: auto;">
    <p id="notice"><%= notice %></p>
    <table>
      <thead>
        <tr>
          <th>Nome</th>
          <th>Plano</th>
          <th>Email</th>
          <th>DDD</th>
          <th>Telefone</th>
          <th>Tipo de Pagamento</th>
          <th>Status</th>
          <th>Nome do Produto</th>
          <th>Data de Confirmação</th>
          <th>Preço de Venda</th>
          <th>Preço de Custo</th>
        </tr>
      </thead>
    
      <tbody>
        <% @alunos.each do |aluno| %>
          <tr>
            <td><%= aluno.name %></td>
            <td><%= aluno.name_subscription_plan %></td>
            <td><%= aluno.email %></td>
            <td><%= aluno.phone_checkout_local_code %></td>
            <td><%= aluno.phone_checkout_number %></td>
            <td><%= aluno.payment_type %></td>
            <td><%= aluno.status %></td>
            <td><%= aluno.prod_name %></td>
            <td><%= aluno.confirmation_purchase_date %></td>
            <td><%= aluno.cms_vendor %></td>
            <td><%= aluno.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to 'Novo Aluno', new_aluno_path, style: "margin: 0 7%;" %>
</section>


