<section id="one" style="padding: 3em 0 4em 0;">
  <header style="max-width: 65em;margin: 0 auto;">
    <div class="row">
      <div class="6u 12u$(xsmall)">
        <h2>Alunos</h2>
      </div>
      <div class="6u 12u$(xsmall)">
        <div class="form-group">
          <input type="email" class="form-control" name="" id="" placeholder="Busca">
        </div>
      </div>
    </div>
  </header>



  <div class="inner" style="overflow: auto;">
    <p id="notice"><%= notice %></p>
    <table>
      <thead style="font-size: 13pt;">
        <tr>
          <th>Nome</th>
          <th>Plano</th>
          <th>Email</th>
          <th>Telefone</th>
          <th>Status</th>
          <th>D.  Confirmação</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
    
      <tbody style="font-size: 9pt;">
        <% @alunos.each do |aluno| %>
          <tr>
            <td style="text-transform: capitalize;"><%= aluno.name %></td>
            <td><%= aluno.name_subscription_plan %></td>
            <td><%= aluno.email %></td>
            <td>
              <% if aluno.phone_checkout_local_code.present? %>
                (<%= aluno.phone_checkout_local_code %>) <%= aluno.phone_checkout_number %>
              <% end %>
            </td>
            <td><%= status_pagamento_aluno(aluno.status) %></td>
            <td><%= aluno.confirmation_purchase_date.strftime("%d/%m/%Y")%></td>
            <td></td>
            <td></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
  <%= link_to 'Novo Aluno', new_aluno_path, style: "margin: 0 7%;" %>
</section>


